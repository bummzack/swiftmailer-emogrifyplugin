{
    "name": "bummzack/swiftmailer-emogrifyplugin",
    "description": "Inline CSS in the HTML output of SwiftMailer using Emogrifier.",
    "license": "BSD-3-Clause",
    "keywords": [
        "swiftmailer",
        "emogrifier",
        "plugin"
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "swiftmailer/swiftmailer": "^6.0",
        "pelago/emogrifier": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3",
        "mockery/mockery": "^1.4"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Bummzack\\SwiftMailer\\EmogrifyPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bummzack\\SwiftMailer\\EmogrifyPlugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -s src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
